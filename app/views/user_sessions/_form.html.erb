<%= form_tag user_sessions_path, :method => :post do %>

  <h1>Login</h1>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= check_box_tag :remember, params[:remember], true %>
  <%= label_tag :remember %>

  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>

<h3>Forgot Password?</h3>
<%= render 'forgot_password_form' %>
