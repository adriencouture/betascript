<%= image_tag @project.cover_image.url(:show) %>
<h2><%= @project.title %></h2>
<p><strong>Description: </strong><br><%= @project.description %></p>
<div id="story-text"><p><strong>Story: </strong><br> <%= @project.story %></p></div>

<p>
  <strong>Tags:</strong>
  <% @project.tags.each do |t| %>
    <%= t.title %>
  <% end %>
</p>

<div id="script-tools">
  <h3>Formatting tools</h3>
  <ul id="formatting-buttons">
    <li><button id="scene">Scene Heading</button></li>
    <li><button id="script-action">Action</button></li>
    <li><button id="character">Character</button></li>
    <li><button id="dialogue">Dialogue</button></li>
    <li><button id="toggleItalicYellowBgButton">Highlight</button></li>
  </ul>
</div>

<div id="comment-list">
  <h3>Comments:</h3>
  <%= render partial: "comments" %>
</div>

<div id="comment-form">
  <% if current_user %>
    <h3>Leave a Comment. Be Beta.</h3>
    <%= render partial: "create_comment" %>
  <% else %>
    <p>Please <%= link_to "log in", login_path %> to post a comment.</p>
  <% end %>
</div>

<%= link_to 'Back to projects', projects_path %> <% if @project.user == current_user %> | <%= link_to 'Edit project', edit_project_path(@project) %> <% end %>
