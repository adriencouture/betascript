
<div class="nested-fields">
  <div class="field">
    <%= f.label :name %>
    <div class="clear-me"><%= f.text_field :name, :placeholder => "Name" %></div>
  </div>

  <div class="field">
    <%= f.label :parenthetical %>
    <div class="clear-me"><%= f.text_area :parenthetical, :placeholder => "Parenthetical" %></div>
  </div>

  <div class="field">
    <%= f.label :dialogue %>
    <div class="clear-me"><%= f.text_area :dialogue, :placeholder => "Dialogue" %></div>
  </div>

  <%= link_to_remove_association "Remove Character", f %>
  <%= link_to "Delete Character", [@project, @scene, @character], method: :delete, data: {confirm: "Are you sure you want to kill this character?"} %>

</div>
