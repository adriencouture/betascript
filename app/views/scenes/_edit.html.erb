<% if @project.user == current_user %>
  <div id="scene-form">
    <h3>Edit Scene</h3>

    <%= form_for [@project, @scene] do |f| %>

      <div class="field">
        <%= f.label :heading %><br>
        <%= f.text_field :heading, :placeholder => "Scene heading" %>
      </div>

      <div class="field">
        <%= f.label :action %><br>
        <%= f.text_area :action, :placeholder => "Action" %>
      </div>

      <div id="characters">
        <%= f.fields_for :characters do |character_fields| %>
          <%= render "character_fields", f: character_fields %>
        <% end %>

        <div class="links">
          <%= link_to_add_association 'add character', f, :characters %>
        </div>
      </div>

      <div class="action">
        <%= f.submit "Edit Scene" %>
      </div>

    <% end %>
  </div>
<% end %>
