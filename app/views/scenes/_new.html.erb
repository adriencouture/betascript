<% if @project.user == current_user %>
  <div id="scene-form">
    <h3>New Scene</h3>

    <%= form_for [@project, @scene], remote: true do |f| %>

      <div class="field">
        <%= f.label :heading %>
        <%= f.text_field :heading, :placeholder => "Scene heading" %>
      </div>

      <div class="field">
        <%= f.label :action %>
        <%= f.text_area :action, :placeholder => "Action" %>
      </div>

      <div id="characters">
        <%= f.fields_for :characters do |character_fields| %>
          <%= render partial: "projects/character_fields", locals: {f: character_fields} %>
        <% end %>

        <div class="links">
          <%= link_to_add_association 'Add Character', f, :characters, {partial: 'projects/character_fields'} %>
        </div>
      </div>

      <div class="action">
        <%= f.submit "Create Scene" %>
      </div>

    <% end %>
  </div>
<% end %>
